@page "/streams"

@using Speedruns.Web.Data
@inject StreamService StreamService
@inject IJSRuntime JSRuntime;



@if (_streams == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l9 offset-l1">
                <div id="stream" class="video-container">
                    <iframe width="853" height="480" src="//www.youtube.com/embed/Q8TXgCzxEnw?rel=0" frameborder="0" allowfullscreen=""></iframe>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var stream in _streams)
        {
            <div class="col s12 m3">
                <div class="card horizontal">
                    <div class="card-image">
                        <img src="https://lorempixel.com/100/190/nature/6">
                    </div>
                    <div class="card-stacked">
                        <div class="card-content">
                            <span class="card-title grey-text text-darken-4 truncate">
                                @stream.Username - @stream.Title
                            </span>
                            <p>@stream.Description</p>
                        </div>
                        <div class="card-action">
                            <a href="#">This is a link</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

}

@code {
    private List<Stream> _streams;

    protected override async Task OnInitializedAsync()
    {
        _streams = await StreamService.Get();
    }

